<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.project.controllers.LoginController"
            prefWidth="500" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #e8f5e9, #ffffff);">

    <!-- Main Container -->
    <VBox alignment="CENTER" spacing="25"
          AnchorPane.topAnchor="80"
          AnchorPane.leftAnchor="60"
          AnchorPane.rightAnchor="60"
          AnchorPane.bottomAnchor="80">

        <!-- Logo/Icon Placeholder -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="⚕" style="-fx-font-size: 48px; -fx-text-fill: #2e7d32;"/>
            <VBox alignment="CENTER_LEFT">
                <Label text="PharmaCare" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;"/>
                <Label text="Système de Gestion" style="-fx-font-size: 12px; -fx-text-fill: #558b2f;"/>
            </VBox>
        </HBox>

        <!-- Login Card -->
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 5);
                     -fx-padding: 40 35 40 35;">

            <Label text="Connexion"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2e7d32;"/>

            <Label text="Accédez à votre compte"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: #757575;"/>

            <!-- Email Field -->
            <VBox spacing="8" prefWidth="300">
                <Label text="Adresse Email"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #424242;"/>
                <TextField fx:id="emailField"
                           promptText="exemple@pharmacie.com"
                           style="-fx-background-color: #f5f5f5;
                                 -fx-background-radius: 8;
                                 -fx-border-color: #e0e0e0;
                                 -fx-border-radius: 8;
                                 -fx-padding: 12;
                                 -fx-font-size: 14px;"
                           prefWidth="300"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8" prefWidth="300">
                <Label text="Mot de Passe"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #424242;"/>
                <PasswordField fx:id="passwordField"
                               promptText="••••••••"
                               style="-fx-background-color: #f5f5f5;
                                     -fx-background-radius: 8;
                                     -fx-border-color: #e0e0e0;
                                     -fx-border-radius: 8;
                                     -fx-padding: 12;
                                     -fx-font-size: 14px;"
                               prefWidth="300"/>
            </VBox>

            <!-- Login Button -->
            <Button text="Se Connecter"
                    onAction="#handleLogin"
                    prefWidth="300"
                    style="-fx-background-color: #2e7d32;
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 8;
                           -fx-padding: 12;
                           -fx-cursor: hand;">
                <cursor>
                    <javafx.scene.Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

            <!-- Message Label -->
            <Label fx:id="messageLabel"
                   textFill="#d32f2f"
                   wrapText="true"
                   prefWidth="300"
                   style="-fx-font-size: 12px;
                          -fx-padding: 5;"/>

            <!-- Forgot Password Link -->
            <Hyperlink text="Mot de passe oublié ?"
                       style="-fx-text-fill: #2e7d32;
                             -fx-font-size: 12px;"/>
        </VBox>

        <!-- Footer -->
        <Label text="© 2025 PharmaCare - Tous droits réservés"
               style="-fx-font-size: 10px;
                      -fx-text-fill: #9e9e9e;"/>
    </VBox>
</AnchorPane>